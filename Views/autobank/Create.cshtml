@{
    ViewBag.Title = "Generate QR Code";
}

<h2>Generate QR Code</h2>

@using (Html.BeginForm("GenerateQRCode", "autobank", FormMethod.Post))
{
    <div>
        <label for="bankId">Bank ID:</label>
        <input type="text" id="bankId" name="bankId" required />
    </div>
    <div>
        <label for="accountNo">Account No:</label>
        <input type="text" id="accountNo" name="accountNo" required />
    </div>
    <div>
        <label for="template">Template:</label>
        <input type="text" id="template" name="template" required />
    </div>
    <div>
        <label for="amount">Amount:</label>
        <input type="number" id="amount" name="amount" required />
    </div>
    <div>
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required />
    </div>
    <div>
        <label for="accountName">Account Name:</label>
        <input type="text" id="accountName" name="accountName" required />
    </div>
    <div>
        <input type="submit" value="Generate QR Code" />
    </div>
}

@if (TempData["qrImage"] != null)
{
    <h3>QR Code:</h3>
    <img src="@TempData["qrImage"]" />
}
