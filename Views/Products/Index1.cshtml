
@using do_an_web.Models
@using PagedList.Mvc

@model do_an_web.Models.Homemol

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* CSS cho container chính */
    .containera {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Khoảng cách giữa các div */
    }

    .item {
        flex: 1 1 calc(25% - 20px); /* 25% chiều rộng mỗi khối trừ đi khoảng cách */
        max-width: calc(25% - 20px);
        box-sizing: border-box;
    }

    .anh-hoa {
        width: 100%;
        height: auto;
        display: block;
    }

    .ok1 p {
        text-align: center;
        font-size: 18px;
        margin: 5px 0;
    }

    .danh-gia-5-sao {
        text-align: center;
        font-weight: bold;
    }
</style>

<link href="~/Content/huymanh.css" rel="stylesheet" />
<link href="~/Css/page.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<!-- Carousel Container -->
<div id="carousel-banner-home" class="carousel slide" data-bs-ride="carousel">
    <!-- Carousel Inner -->
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <a href="#">
                        <img src="https://tramhoa.com/wp-content/uploads/2020/03/default-website-banner.jpg.webp"
                             alt="home slider 1" class="img-fluid" width="1355" height="432">
                    </a>
                </div>
            </div>
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <a href="#">
                        <img src="https://in.flowercorner.vn/uploads/P657fd247737038.75342862.webp"
                             alt="home slider 2" class="img-fluid" width="1355" height="432">
                    </a>
                </div>
            </div>
        </div>
        <!-- Slide 3 (Active Slide) -->
        <div class="carousel-item active">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <a href="#">
                        <img src="https://in.flowercorner.vn/uploads/P649ea8ef2ed4f0.09844576.webp"
                             alt="home slider 3" class="img-fluid" width="1355" height="432">
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel-banner-home" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel-banner-home" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="dvd">
    <div class="title-div" style="
    height: 70px;
">
        <h4 class="shop-page-title is-xlarge">Tất cả sản phẩm của cửa hàng</h4>
    </div>

    <div class="containeraa">
        @foreach (var item in Model.ListProduct1)
        {
            <div class="item">
                <div class="ok1">
                    <a href="@Url.Action("Details", "Products", new { id = item.product_id })">
                        @if (item.images != null)
                        {
                            var base64String = Convert.ToBase64String(item.images);
                            <img aria-label="@item.product_name" class="anh-hoa" src="data:image/png;base64,@base64String" />
                        }
                        <p>@item.product_name</p>
                    </a>
                    <div class="danh-gia-5-sao">
                        <p>@String.Format("{0:N0}", item.price) ₫</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Phân trang -->
    <div class="pagination">
        @Html.PagedListPager(Model.ListProduct1, page => Url.Action("Index1", new { page = page }))
    </div>
</div>
